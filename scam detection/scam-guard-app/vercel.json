{
    "rewrites": [
        {
            "source": "/api/(.*)",
            "destination": "/backend/server.py"
        }
    ],
    "builds": [
        {
            "src": "backend/server.py",
            "use": "@vercel/python",
            "config": {
                "includeFiles": "backend/**"
            }
        },
        {
            "src": "package.json",
            "use": "@vercel/static-build",
            "config": {
                "distDir": "dist"
            }
        }
    ]
}
